modules = ["python-3.11", "nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Full Stack Dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && pnpm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = 48509289
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && pnpm install && pnpm run dev"

[[workflows.workflow]]
name = "ML Service"
author = 48509289
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Full Stack Dev"
author = 48509289
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && pnpm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && pnpm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/frontend && pnpm run start"]
build = ["bash", "-c", "cd apps/frontend && pnpm run build"]
